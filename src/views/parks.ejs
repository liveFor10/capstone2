<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" initial-scale=1>
		<title>pmfinder - parks</title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
		<link href="/css/main.css" rel="stylesheet">
		<script src="/js/dropdowns.js" type="text/javascript"></script>
		<script type="text/javascript">
			window.onload = loadParkDropdowns();
		</script>
	</head>
	<body>
		<!--columns container--><div class="sidebar-main-parent">
			<!--column 1--><div id="sidebar" class="sidebar"></div><!--column 1-->
			<!--column 2--><div class="main-window">
				<div class="lfxMessages" id="msg ">
					<% if ( locals.message ) { %>
						<p class="lfxMessages"><%= locals.message %></p>
					<% } else if (messages.error) { %>  
						<p class="lfxMessages"><%= messages.error %></p>
					<% } else if (messages.success) { %>
						<p class="lfxMessages"><%= messages.success %></p>
				 	<% } %>
				</div>
				
				<!--search controls-->
				<form class="row g-3" name="parks" action="/parks/search"
				  enctype="application/x-www-form-urlencoded"  method="GET">

					<h1 class="h3 mb-3 fw-normal">Good luck in your search</h1>
					
					<div class="col-md-6 form-floating">
						<select class="form-control" name="type" id="typ">
							<option selected value=""></option>	
						</select>
						<label for="typ">park types</label>
					</div>
					<div class="col-md-6 form-floating">
						<select class="form-control" name="location" id="loc">
							<option selected value=""></option>
						</select>
						<label for="loc">park locations</label>
					</div>

					<div class="col-md-5 form-floating">
						<fieldset>
							<div>
								<input type="radio" id="or" name="searchCriterica" value="any" disabled>
								<label for="or">Use ANY search filter</label>
							</div>
							<div>
								<input type="radio" id="and" name="searchCriterica" value="all" checked>
								<label for="and">Use ALL search filters</label>
							</div>
						</fieldset>
					</div>
					<div class="col-md-4 form-floating">
						<input  class="btn btn-outline-secondary btn-lg px-4" type="submit"
							id="sub" value="Search">
					</div>
					<div class="col-md-3 form-floating"></div>
				</form>
				<br>
				<!--display-->
				<div class="album py-5 lfxWhiteDiv">
					<div class="container">
						<div class="row row-cols-1 row-cols-sm-2 g-2">
							<% if ( locals.parks ) { %>
								<% parks.map((park, arrayIndex) => { %>
									<div class="col">
										<div class="card shadow-sm">
											<div class="card-body">
												<p class="card-text">
													<h4><%=park.LocationName %></h4>
													<p><%=park.city %></p>
												</p>
												<div class="d-flex justify-content-between align-items-center">
													<div class="btn-group">
														<a href="/parks/<%=park._id%>">
															<button class="btn btn-sm btn-outline-secondary btn-lg px-4" type="button">
																Details
															</button>
														</a>
													</div>
													<!--<small class="text-muted">9 mins</small>-->
												</div>
											</div>
										</div>
									</div>
								<% }) %>
							<% } else if (messages.success) { %>
								<% if ( locals.message ) { %>
									<p class="lfxMessages"><%= locals.message %></p>
								<% } %>  
							 <% } %>
						</div>
					</div>
				</div>
			<!--column 2--></div>
		<!--column container--></div>
		

		<script src="/js/jquery.3.6.0.min.js" type="text/javascript"></script>
		<script src="/js/loadSidebar.js" type="text/javascript"></script> 
		<script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
	</body>
</html>


		

